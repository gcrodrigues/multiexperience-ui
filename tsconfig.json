{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "jsx": "react",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationDir": "./types",
		"composite": true,
		"baseUrl": ".",
		"paths": {
			"@multiexperience/*": ["packages/*/src"]
		}
  },
	"include": ["packages"],
  "exclude": ["packages/**/*.stories.ts", ".storybook", "images"]
}